include _include/sharedHTMLfunctions

extends layout

block content
    .row.page-header
        .col-lg-12
            h1 #{name}
    .row
        .col-xs-12.col-md-9
            .row
                .col-xs-12.col-sm-6
                    p.rating
                        +outputRating(rating)                        
                    p #{address}
                    .panel.panel-primary
                        .panel-heading
                            h2.panel-title Opening Times
                        .panel-body
                            each hour in location.openingTimes
                                unless hour.closed
                                    p #{hour.days} : #{hour.opening} - #{hour.closing} 
                                if hour.closed
                                    p #{hour.days} :  closed

                    .panel.panel-primary
                        .panel-heading
                            h2.panel-title Facilities
                        .panel-body
                            each facility in location.facilities
                                span.label.label-warning
                                    span.glyphicon.glyphicon-ok
                                    | &nbsp; #{facility}
                                | &nbsp;
                .col-xs-12.col-sm-6.location-map
                    .panel.panel-primary
                        .panel-heading
                            h2.panel-title #{map.title}
                        .panel-body
                            img.img-responsive.img-rounded(src= '#{map.image}')
            .row
                .col-xs-12
                  .panel.panel-primary.review-panel
                    .panel-heading
                      a.btn.btn-default.pull-right(href='/location/#{location._id}/review/new') Add review
                      h2.panel-title Customer reviews
                    .panel-body.review-container
                      each review in location.reviews
                          .row
                            .review
                              .well.well-sm.review-header
                                span.rating
                                  +outputRating(review.rating)
                                span.reviewAuthor  #{review.author}
                                small.reviewTimestamp &nbsp;
                                 +formatDate(review.createdoN)
                              .col-xs-12
                                p #{review.reviewText}                      
            .col-xs-12.col-md-3
              p.lead
                | #{sidebar.context}
              p
                | #{sidebar.callToAction}